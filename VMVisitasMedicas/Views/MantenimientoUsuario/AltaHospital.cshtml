@model VMVisitasMedicas.Models.Hospital

@{
    ViewBag.Title = "Alta Hospital";
}
<h2>Alta Hospital</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Hospital</h4>
        <hr />
        <div class="form-group">
            @*@Html.LabelFor(model => model.hos_descripcion, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label id="usu_nombre" class="control-label col-md-2">Nombre Hospital</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hos_descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hos_descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.hos_direccion, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label id="usu_nombre" class="control-label col-md-2">Dirección</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hos_direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hos_direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.hos_telefono_AC, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label id="usu_nombre" class="control-label col-md-2">Teléfono Informes</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hos_telefono_AC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hos_telefono_AC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.hos_telefono_eme, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label id="usu_nombre" class="control-label col-md-2">Teléfono Emergencias</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hos_telefono_eme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hos_telefono_eme, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear Hospital" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a Consulta de Hospitales", "HospitalConsulta", new { id= ViewBag.MessageID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
